#include <stdio.h>
#include <stdlib.h>

#define MAX_SIZE 5 

int circularQueue[MAX_SIZE];
int front = -1;
int rear = -1;


    return (front == (rear + 1) % MAX_SIZE);
}


int isEmpty() {
    return (front == -1 && rear == -1);
}


void enqueue(int data) {
    if (isFull()) {
        printf("Queue Overflow: Cannot enqueue, queue is full.\n");
        return;
    }
    if (isEmpty()) {
        front = 0;
        rear = 0;
    } else {
        rear = (rear + 1) % MAX_SIZE;
    }
    circularQueue[rear] = data;
    printf("%d enqueued successfully.\n", data);
}


int dequeue() {
    int data = -1;
    if (isEmpty()) {
        printf("Queue Underflow: Cannot dequeue, queue is empty.\n");
        return -1;
    }
    data = circularQueue[front];
    if (front == rear) { // Only one element in the queue
        front = -1;
        rear = -1;
    } else {
        front = (front + 1) % MAX_SIZE;
    }
    printf("%d dequeued successfully.\n", data);
    return data;
}


void display() {
    if (isEmpty()) {
        printf("Queue is empty.\n");
        return;
    }
    printf("Circular Queue elements: ");
    int i = front;
    while (i != rear) {
        printf("%d ", circularQueue[i]);
        i = (i + 1) % MAX_SIZE;
    }
    printf("%d\n", circularQueue[rear]);
}


int peek() {
    if (isEmpty()) {
        printf("Queue is empty. Cannot peek.\n");
        return -1;
    }
    return circularQueue[front];
}

int main() {
    int choice, value;

    while (1) {
        printf("\nCircular Queue Operations:\n");
        printf("1. Enqueue\n");
        printf("2. Dequeue\n");
        printf("3. Is Empty?\n");
        printf("4. Is Full?\n");
        printf("5. Display\n");
        printf("6. Peek\n");
        printf("7. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                printf("Enter value to enqueue: ");
                scanf("%d", &value);
                enqueue(value);
                break;
            case 2:
                dequeue();
                break;
            case 3:
                if (isEmpty()) {
                    printf("Queue is empty.\n");
                } else {
                    printf("Queue is not empty.\n");
                }
                break;
            case 4:
                if (isFull()) {
                    printf("Queue is full.\n");
                } else {
                    printf("Queue is not full.\n");
                }
                break;
            case 5:
                display();
                break;
            case 6:
                value = peek();
                if (value != -1) {
                    printf("Front element (peek): %d\n", value);
                }
                break;
            case 7:
                printf("Exiting program.\n");
                exit(0);
            default:
                printf("Invalid choice. Please try again.\n");
        }
    }
    return 0;
}
